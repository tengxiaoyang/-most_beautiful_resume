.main {
  background: #fff;
  padding: 0;
  margin: 0;
  height: 100vh;
  position: relative;
}
.top {
  height: 517rpx;
  position: relative;
  margin: 0;
  padding: 0;
}
.wallpaper {
  width: 100%;
  height: 468rpx;
}
.wallpaper_shade {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 468rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0,0,0,0.5);
}
.top .user-outside {
  width: 100%;
  display: flex;
  justify-content: center;
}
.top .user {
  width: 500rpx;
  height: 458rpx;
  position: absolute;
  top: 181rpx;
  z-index: 1;
}
.top .user .user_bottom {
  display: flex;
  justify-content: center;
  width: 500rpx;
  height: 167rpx;
}
.user-icon-img {
  width: 163rpx;
  height: 163rpx;
  border-radius: 167rpx;
  border: 4rpx solid #fff;
}
.top .user .user_top {
  position: relative;
  display: inline-block;
  width: 500rpx;
  height: 142rpx;
  margin: 0 0 64rpx 0;
}
.username_outside {
  display: flex;
  justify-content: center;
  width: 500rpx;
}
.username {
  position: relative;
  display: block;
  height: 53rpx;
  line-height: 76rpx;
  color: #fff;
  font-size: 55rpx;
  border-bottom: 3rpx solid #fff;
  padding: 0 0 48rpx 0;
  margin: 0 0 36rpx 0;
}
.user_top .job_intention {
  display: block;
  position: relative;
  width: 500rpx;
  height: 47rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 33rpx;
  margin: 16rpx 0 0 0;
}
.top button {
  text-align: center;
  line-height: 148rpx;
  font-size: 32rpx;
  position: relative;
  top: -84rpx;
  width: 148rpx!important;
  height: 148rpx;
  border-radius: 74rpx;
  border: 0;
  padding: 0;
  margin: 0;
}
.personal_info {
  position: relative;
  margin: 148rpx 0 0 0;
  height: 250rpx;
}
.technical_direction {
  position: relative;
  margin: 178rpx 0 0 0;
  height: 250rpx;
}
.window_title_outside {
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: center;
}
.window_title_outside .window_title_inside {
  width: 90%;
  height: 96rpx;
  background: #fff;
}
.window_title_inside-text {
  width: 97%;
  height: 50rpx;
  border-left: 8rpx solid #000;
  padding: 8rpx 0 8rpx 8rpx;
}
.window_title_inside-horizontal_line {
  width: 100%;
  border-bottom: 4rpx solid #A0A0A0;
  margin: 12rpx 0 0 0;
}
.window {
  width: 100%;
  height: 296rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.other_window {
  width: 100%;
  height: 191rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.window-outside {
  width: 90%;
  background: #fff;
}
.window-inside {
  width: 100%;
  height: 58rpx;
  display: flex;
  align-items: center;
}
.window-inside-center {
  width: 100%;
  height: 69%;
  display: flex;
  align-items: center;
}
.window_content-icon {
  display: inline-block;
  width: 50rpx;
  height: 46rpx;
  margin: 0 8rpx 0 0;
}
.window-left {
  display: inline-block;
  width: 100%;
  height: 100%;
  position: relative;
  color: #000;
  font-size: 27rpx;
  margin: 0 0 0 0;
}
.window-middle {
  display: inline-block;
}
.window-right {
  display: inline-block;
  width: 90rpx;
  height: 100%;
  position: relative;
  color: #606060;
  font-size: 22rpx;
  margin: 0 0 0 10rpx;
}
.window-middle {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 100%;
  position: relative;
}
.progress_bar {
  width: 97%;
  height: 60%;
  background: #F0F0F0;
  border-radius: 10rpx;
}
.open_read_jokes {
  display: block;
  position: relative;
}

.list_name_box{
  background: #fff;
  border-bottom: 1px solid #efefef;
  display: flex;
  height: 90rpx;
  align-items: center;
  padding: 0 25rpx;
  font-size: 32rpx;
}
.list_item_name{
  flex: 1;
}
.icon_down{
  width: 35rpx;
  height:35rpx;
  transition:transform  0.3s;
}
